<?xml version="1.0" encoding="UTF-8"?>
<suite name="Home page and excel to pdf page suite" thread-count="5" parallel="tests">
    <parameter name="excelPdfTitle" value="Convert EXCEL to PDF"></parameter>
    <listeners>
        <listener class-name="com.listeners.Listener"></listener>
    </listeners>

    <test name="test chrome mac">
        <parameter name="system" value="mac"></parameter>
        <parameter name="browserName" value="chrome"></parameter>
        <classes>
            <class name="com.tests.HomePageTest"></class>
            <class name="com.tests.ExcelToPdfTest"></class>
        </classes>
    </test>
    <test name="test chrome windows">
        <parameter name="system" value="windows"></parameter>
        <parameter name="browserName" value="chrome"></parameter>
        <classes>
            <class name="com.tests.HomePageTest"></class>
            <class name="com.tests.ExcelToPdfTest"></class>
        </classes>
    </test>
    <test name="test firefox mac">
        <parameter name="system" value="mac"></parameter>
        <parameter name="browserName" value="firefox"></parameter>
        <classes>
            <class name="com.tests.HomePageTest"></class>
            <class name="com.tests.ExcelToPdfTest"></class>
        </classes>
    </test>
    <test name="test firefox windows">
        <parameter name="system" value="windows"></parameter>
        <parameter name="browserName" value="firefox"></parameter>
        <classes>
            <class name="com.tests.HomePageTest"></class>
            <class name="com.tests.ExcelToPdfTest"></class>
        </classes>
    </test>
    <test name="test safari mac">
        <parameter name="system" value="mac"></parameter>
        <parameter name="browserName" value="safari"></parameter>
        <classes>
            <class name="com.tests.HomePageTest"></class>
            <class name="com.tests.ExcelToPdfTest"></class>
        </classes>
    </test>
</suite>



